<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/rectanguloFondo_111"
        android:layout_width="301dp"
        android:layout_height="400dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_rectangulo_gr" />

    <TextView
        android:id="@+id/tituloEquipo_111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Equipo"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/rectanguloFondo_111"
        app:layout_constraintHorizontal_bias="0.108"
        app:layout_constraintStart_toStartOf="@+id/rectanguloFondo_111"
        app:layout_constraintTop_toTopOf="@+id/rectanguloFondo_111" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewEquipo"
        android:layout_width="269dp"
        android:layout_height="128dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="@+id/rectanguloFondo_111"
        app:layout_constraintStart_toStartOf="@+id/rectanguloFondo_111"
        app:layout_constraintTop_toBottomOf="@+id/tituloEquipo_111" />

    <TextView
        android:id="@+id/tituloMusculosInvolucrados_111"
        android:layout_width="269dp"
        android:layout_height="76dp"
        android:layout_marginTop="12dp"
        android:text="MÃºsculos Involucrados"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@+id/rectanguloFondo_111"
        app:layout_constraintHorizontal_bias="0.718"
        app:layout_constraintStart_toStartOf="@+id/rectanguloFondo_111"
        app:layout_constraintTop_toBottomOf="@+id/recyclerViewEquipo" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewMusculoInvolucrado"
        android:layout_width="271dp"
        android:layout_height="87dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/rectanguloFondo_111"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/rectanguloFondo_111"
        app:layout_constraintTop_toBottomOf="@+id/tituloMusculosInvolucrados_111" />


</androidx.constraintlayout.widget.ConstraintLayout>
