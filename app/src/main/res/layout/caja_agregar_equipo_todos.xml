<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:padding="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/rectangulo_grueso_alargado"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageEquipo"
            android:layout_width="94dp"
            android:layout_height="122dp"
            android:scaleType="center"
            app:srcCompat="@drawable/cuadrado_gr" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="4dp">

            <TextView
                android:id="@+id/nombreEquipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre equipo"
                android:textColor="@color/grey"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/nombreReferenciaEquipo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Referencia"
                android:textSize="12sp"
                android:textColor="@color/orange" />

            <TextView
                android:id="@+id/desc_equipo"
                android:layout_width="wrap_content"
                android:layout_height="58dp"
                android:text="Descripción equipo"
                android:textColor="@color/grisClaro"
                android:textSize="12sp"
                android:scrollbars="vertical"
                android:overScrollMode="ifContentScrolls"/>


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_gravity="bottom|end"
                        android:id="@+id/btnAgregar"
                        android:layout_width="65dp"
                        android:layout_height="18dp"
                        android:background="@color/orange"
                        android:text="Añadir"
                        android:textAllCaps="false"
                        android:textSize="12sp"
                        android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>

            </FrameLayout>


        </LinearLayout>


    </LinearLayout>






</LinearLayout>