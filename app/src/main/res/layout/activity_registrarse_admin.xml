<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#faa304">


    <ImageView
        android:id="@+id/logo_registrate"
        android:layout_width="192dp"
        android:layout_height="181dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_registrate" />

    <View
        android:id="@+id/view"
        android:layout_width="347dp"
        android:layout_height="450dp"
        android:layout_marginTop="28dp"
        android:background="@drawable/rectangulo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_registrate"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="325dp"
        android:layout_height="392dp"
        android:gravity="center"
        android:text="¡Hola administrador, bienvenido a SmartCoach!\n\n Para nosotros es un placer que usted registre su gimnasio y así mejorar la calidad de vida de cada uno de sus clientes\n\n Antes de continuar, queremos estar seguros de que desea iniciar el proceso con nosotros."
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintEnd_toEndOf="@+id/view"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/view" />

    <Button
        android:id="@+id/btnContinuar"
        android:layout_width="127dp"
        android:layout_height="52dp"
        android:layout_marginEnd="46dp"
        android:backgroundTint="#FFFF"
        android:elevation="50dp"
        android:text="Continuar"
        android:textColor="#FDA400"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/btnCancelar"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.351" />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="127dp"
        android:layout_height="52dp"
        android:layout_marginStart="40dp"
        android:backgroundTint="#474645"
        android:elevation="50dp"
        android:text="Cancelar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.351" />

</androidx.constraintlayout.widget.ConstraintLayout>