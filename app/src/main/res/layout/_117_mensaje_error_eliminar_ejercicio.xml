<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/mensajeAlerta"
        android:layout_width="313dp"
        android:layout_height="122dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:text="Lamentablemente, no hemos encontrado un nuevo ejercicio adecuado para incluir en tu rutina de ejercicio actual, dadas tus limitaciones físicas y objetivos específicos."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSeguirCamposVacios"
        android:layout_width="264dp"
        android:layout_height="49dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:backgroundTint="#FDA400"
        android:elevation="50dp"
        android:text="Continuar"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mensajeAlerta" />

</androidx.constraintlayout.widget.ConstraintLayout>
