<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="10dp">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="23dp"
    android:paddingBottom="23dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="76dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:layout_height="80dp"
            android:foregroundGravity="center_vertical"
            app:srcCompat="@drawable/cuadrado_gr" />

        <LinearLayout
            android:layout_marginLeft="12dp"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <HorizontalScrollView
                android:layout_width="230dp"
                android:layout_height="25dp">

                <TextView
                    android:id="@+id/nombreEjercicio_98"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="22sp"
                    android:textColor="@color/black"
                    android:scrollbars="horizontal"
                    android:overScrollMode="ifContentScrolls"
                    android:text="Nombre Ejercicio"/>

            </HorizontalScrollView>


            <TextView
                android:id="@+id/serie_98"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Serie"
                android:textColor="@color/orange" />

            <TextView
                android:layout_marginTop="2dp"
                android:id="@+id/repeticiones_98"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repeticiones"
                android:textColor="@color/orange" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:paddingTop="25dp">

            <TextView
                android:layout_gravity="right"
                android:gravity="right"
                android:id="@+id/valorSerie"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp" />

            <TextView
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginTop="2dp"
                android:id="@+id/valorRepeticiones"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="16sp" />


        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>