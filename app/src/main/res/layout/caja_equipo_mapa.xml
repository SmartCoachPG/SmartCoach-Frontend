<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imageEquipo_33"
        android:layout_width="91dp"
        android:layout_height="136dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cuadrado_gr" />

    <TextView
        android:id="@+id/nombreEquipo_33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Nombre equipo"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageEquipo_33"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreReferenciaEquipo_33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:text="Referencia"
        android:textSize="13sp"
        android:textColor="@color/orange"
        app:layout_constraintStart_toEndOf="@+id/imageEquipo_33"
        app:layout_constraintTop_toBottomOf="@+id/nombreEquipo_33" />

    <TextView
        android:id="@+id/desc_equipo_33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Descripción equipo"
        android:textColor="@color/grey"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageEquipo_33"
        app:layout_constraintTop_toBottomOf="@+id/nombreReferenciaEquipo_33" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDefinir_33"
        android:layout_width="121dp"
        android:layout_height="22dp"
        android:background="@drawable/rounded_orange_background"
        android:layout_marginEnd="4dp"
        android:scaleType="centerInside"
        android:text="Añadir"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_equipo_33"
        app:layout_constraintVertical_bias="1.0"></androidx.appcompat.widget.AppCompatButton>



    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:textSize="14sp"
        android:gravity="center_horizontal"
        android:paddingLeft="13dp"
        android:paddingRight="13dp"
        android:layout_marginBottom="9dp"
        android:background="@drawable/rounded_orange_background"
        android:text="Tipo máquina"
        android:textColor="@color/white"
        android:id="@+id/tipoEjericicio_33"
        android:layout_width="117dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/imageEquipo_33"
        app:layout_constraintTop_toBottomOf="@+id/desc_equipo_33"
        app:layout_constraintHorizontal_bias="0.496" />

</androidx.constraintlayout.widget.ConstraintLayout>