<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">


    <ImageView
        android:id="@+id/imageEquipo"
        android:layout_width="91dp"
        android:layout_height="136dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/cuadrado_gr" />

    <TextView
        android:id="@+id/nombreEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Nombre equipo"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageEquipo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/nombreReferenciaEquipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="2dp"
        android:text="Referencia"
        android:textSize="13sp"
        android:textColor="@color/orange"
        app:layout_constraintStart_toEndOf="@+id/imageEquipo"
        app:layout_constraintTop_toBottomOf="@+id/nombreEquipo" />

    <TextView
        android:id="@+id/desc_equipo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="DescripciÃ³n equipo"
        android:textColor="@color/grey"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageEquipo"
        app:layout_constraintTop_toBottomOf="@+id/nombreReferenciaEquipo" />

    <ImageButton
        android:id="@+id/btnDefinir"
        android:layout_width="121dp"
        android:layout_height="22dp"
        android:layout_marginEnd="4dp"
        android:background="@null"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/desc_equipo"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/rounded_orange_background" />

    <TextView
        android:id="@+id/textbtnDefinir"
        android:layout_width="71dp"
        android:layout_height="15dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="5dp"
        android:text="Definir"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnDefinir"
        app:layout_constraintEnd_toEndOf="@+id/btnDefinir"
        app:layout_constraintStart_toStartOf="@+id/btnDefinir"
        app:layout_constraintTop_toTopOf="@+id/btnDefinir"
        app:layout_constraintVertical_bias="0.875" />

    <include
        android:id="@+id/tipoEjericicio_33"
        layout="@layout/item_tipo_ejercicio"
        android:layout_width="117dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        app:layout_constraintStart_toEndOf="@+id/imageEquipo"
        app:layout_constraintTop_toBottomOf="@+id/desc_equipo" />

</androidx.constraintlayout.widget.ConstraintLayout>