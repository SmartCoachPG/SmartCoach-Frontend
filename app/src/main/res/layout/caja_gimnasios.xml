<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageGym_cajaGym"
            android:layout_width="109dp"
            android:layout_height="95dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/cuadrado_gr" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/nombreGym_cajaGym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/grey"
                android:text="Nombre Gym" />

            <TextView
                android:id="@+id/barrio_cajaGym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Barrio"
                android:textColor="@color/grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/direccion_cajaGym"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="DirecciÃ³n"
                android:textColor="@color/grey"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_gravity="bottom"
        android:id="@+id/btnSuscribir"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:background="@drawable/rounded_orange_background"
        android:text="Subscribirse"
        android:textAllCaps="false"
        android:layout_marginTop="16dp"
        android:textSize="12sp"
        android:textColor="@color/white"></androidx.appcompat.widget.AppCompatButton>

</LinearLayout>
